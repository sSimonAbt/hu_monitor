<mvc:View 
	controllerName="com.myorg.humonitor.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">

	<Shell>
		<Page id="page" title="{i18n>title}">
			<content>
				<mvc:XMLView viewName="com.myorg.humonitor.view.HuSelection"/>
			</content>

			<footer>
				<Toolbar>
					<ToolbarSpacer/>
					<Button type="Emphasized"
							text="{i18n>testButton}"
							press=".onNavToHuEdit"
							ariaDescribedBy="defaultButtonDescription genericButtonDescription">
						<layoutData>
							<FlexItemData growFactor="1"/>
						</layoutData>
					</Button> 
				</Toolbar>
			</footer>
		</Page>
	</Shell>
	
</mvc:View>
