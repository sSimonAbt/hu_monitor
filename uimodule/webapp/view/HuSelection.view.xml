<mvc:View 
	controllerName="com.myorg.humonitor.controller.HuSelection"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true">

    <Panel>

        <headerToolbar>
            <Toolbar>
                <ToolbarSpacer/>
                    <Button type="Emphasized"
                            text="{i18n>addButton}"
                            press=".onDataToSecondTable"
                            ariaDescribedBy="defaultButtonDescription genericButtonDescription">
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </Button>
                    <Button icon="sap-icon://sort-ascending" press=".onSortAscending"/>
                    <Button icon="sap-icon://sort-descending" press=".onSortDescending"/>
            </Toolbar>
        </headerToolbar>


        <Table  id="firstTable"
                mode="MultiSelect"
                width="auto"
                headerToolbar="toolbar">
            <columns>
                <Column>
                    <Text text="{i18n>columnName}" />
                </Column>
                <Column>
                    <Text text="{i18n>columnSurname}" />
                </Column>
                <Column>
                    <Text text="{i18n>columnDescription}" />
                </Column>
            </columns>

            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="Simon"/>
                        <Text text="Abt"/>
                        <Text text="Bester"/>
                    </cells>
                </ColumnListItem>

                <ColumnListItem>
                    <cells>
                        <Text text="Tobi"/>
                        <Text text="Neidhardt"/>
                        <Text text="Hammer"/>
                    </cells>
                </ColumnListItem>

                <ColumnListItem>
                    <cells>
                        <Text text="Manuel"/>
                        <Text text="Wolf"/>
                        <Text text="King"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Panel>

    <Panel>
        <Table  id="secondTable"
                mode="MultiSelect"
                width="auto">
            <columns>
                <Column>
                    <Text text="{i18n>columnName}" />
                </Column>
                <Column>
                    <Text text="{i18n>columnSurname}" />
                </Column>
                <Column>
                    <Text text="{i18n>columnDescription}" />
                </Column>
            </columns>

            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="Ali"/>
                        <Text text="Kaplan"/>
                        <Text text="SchÃ¼ler"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>  
    </Panel>
</mvc:View>